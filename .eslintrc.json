{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "global-require": 0,
    "curly": "error",
    "no-nested-ternary": "off",
    "no-param-reassign": "off",
    "no-await-in-loop": "warn"
  }
}